@model EmployeeManagementSystem.Models.EmployeeViewModel
<partial name="~/Views/Shared/_Notification.cshtml" />
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card mt-5">
                <div class="card-header bg-dark text-white">
                    <h3 class="text-center">Add Employee</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="Addemployee">
                        <div class="mb-3">
                            <label for="Name" class="form-label text-dark">Name</label>
                            <input type="text" asp-for="Name" class="form-control" id="Name" style="border-color: #000;" />
                        </div>
                        <div class="mb-3">
                            <label for="Email" class="form-label text-dark">Email address</label>
                            <input type="email" asp-for="Email" class="form-control" id="Email" style="border-color: #000;" />
                        </div>
                        <div class="mb-3">
                            <label for="PhoneNumber" class="form-label text-dark">Phone Number</label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" id="PhoneNumber" style="border-color: #000;" />
                        </div>
                        <div class="mb-3">
                            <label for="Address" class="form-label text-dark">Address</label>
                            <input type="text" asp-for="Address" class="form-control" id="Address" style="border-color: #000;" />
                        </div>
                        <div class="mb-3">
                            <label for="Position" class="form-label text-dark">Position</label>
                            <input type="text" asp-for="Position" class="form-control" id="Position" style="border-color: #000;" />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-dark">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
